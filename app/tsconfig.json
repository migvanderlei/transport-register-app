{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["esnext", "DOM"],
    "module": "commonjs",
    "rootDirs": ["src", "tests"],
    "paths": {
      "@/*": ["*"]
    },
    "baseUrl": "src",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts", "src/index.ts", "test/**/*", "src/index.ts"],
  "exclude": ["./dist"]
}
